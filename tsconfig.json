{
  "compilerOptions": {
    "outDir": "lib",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "module": "es2015",
    "target": "ESNext",
    "lib": ["es7", "dom"],
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "paths": {
      "types": ["./types"]
    },
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "types/test"
  ],
  "include": [
    "types",
    "src"
  ]
}
